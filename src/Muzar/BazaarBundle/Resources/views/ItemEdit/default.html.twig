{% extends "::base.html.twig" %}

{% block content %}

    <div class="row" id="content">
        {{ form_start(form, { 'attr': { 'id': 'edit' } }) }}

        <div class="col-xs-12 col-sm-12 col-md-8">

            <h3>
                Co prodávám
            </h3>

            <div class="col-xs-12 col-sm-12 col-md-12">
                <div class="form-group">

                    {{ form_label(form.name, 'Název prodávané věci') }}
                    {{ form_widget(form.name, { 'attr': {'class': 'form-control', 'placeholder': 'např. Gibson 1956 Les Paul Goldtop'} }) }}

                </div>
            </div>

            {#<div class="col-xs-12 col-sm-12 col-md-12">#}
            {#<div class="form-group">#}
            {#Návrh kategorie:<br>#}
            {#<b>#}
            {#Kytary > Elektrické kytary > LP#}
            {#</b>#}

            {#<button type="submit" class="btn btn-success">Umístit</button>#}
            {#</div>#}
            {#</div>#}

            <div id="category" class="row no-margin">
                <div class="col-xs-12 col-sm-4 col-md-4">
                    <div class="form-group">
                        {{ form_label(form.category, 'Kategorie') }}
                        {{ form_widget(form.category, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
            </div>
            <div id="category-widget" class="row no-margin">
            </div>

            <div class="col-xs-12 col-sm-12 col-md-12">

                <div class="row">
                    <div class="form-group">
                        <div class="col-xs-12 col-sm-6 col-md-6">
                            {{ form_label(form.price, 'Cena') }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="col-xs-12 col-sm-4 col-md-4">
                            <div class="input-group">
                                {{ form_widget(form.price, { 'attr': {'class': 'form-control', 'placeholder': 'např. 1000'} }) }}
                                <span class="input-group-addon">Kč</span>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-3 col-md-3">
                            {{ form_widget(form.negotiablePrice) }}
                            {{ form_label(form.negotiablePrice, 'Cena dohodou') }}
                        </div>
                        <div class="col-xs-12 col-sm-5 col-md-5">
                            {{ form_widget(form.allowSendingByMail) }}
                            {{ form_label(form.allowSendingByMail, 'Jsem ochoten zboží poslat poštou') }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-sm-12 col-md-12">
                <div class="form-group">
                    {{ form_label(form.description, 'Popis prodávané věci') }}
                    {{ form_widget(form.description, { 'attr': {'class': 'form-control', 'rows': 3, 'placeholder': 'např. Stáří, opotřebení'} }) }}
                </div>
            </div>



        </div>

        <div class="col-xs-12 col-sm-8 col-md-8">

            <h3>
                Kontakt
            </h3>

            <div class="row no-margin">
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        {{ form_label(form.contact.email, 'Email') }}
                        <span class="help-block-inline">(pro odpovědi)</span>
                        {{ form_widget(form.contact.email, { 'attr': {'class': 'form-control', 'type': 'email', 'placeholder': 'Na ten vám budou chodit všechny odpovědi'} }) }}
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-sm-12 col-md-12">
                <div class="form-group">
                    <label>Město nebo obec</label>

                    <div id="address-widget" class="col-xs-10 col-sm-10 col-md-10">
                    </div>

                </div>
            </div>

            <div class="row no-margin">

                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        {{ form_label(form.contact.name, 'Jmeno nebo přezívka') }}
                        <span class="help-block-inline">(Volitelné)</span>
                        {{ form_widget(form.contact.name, { 'attr': {'class': 'form-control', 'type': 'text', 'placeholder': 'Ať kupujicí ví, s kým má tu čest'} }) }}
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        {{ form_label(form.contact.phone, 'Telefon') }}
                        <span class="help-block-inline">(Volitelné)</span>
                        {{ form_widget(form.contact.phone, { 'attr': {'class': 'form-control', 'type': 'tel', 'placeholder': 'Pro rychlejší komunikaci'} }) }}
                    </div>
                </div>
            </div>
        </div>



        <div class="col-xs-12 col-sm-8 col-md-8">
            {% if item.id %}
                {{ form_widget(form.save, { 'attr': {'class': 'btn btn-primary btn-lg'}, 'label': 'Uložit inzerat' }) }}
            {% else %}
                {{ form_widget(form.save, { 'attr': {'class': 'btn btn-primary btn-lg'}, 'label': 'Přidat inzerat' }) }}
            {% endif %}
        </div>

        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>


{% endblock %}

{% block javascripts %}

    <script src="{{ asset('muzarjs/bower_components/requirejs/require.js') }}" type="text/javascript"></script>
    <script src="{{ asset('muzarjs/requirejsconfig.js') }}" type="text/javascript"></script>
    {% if app.debug %}
        <script src="{{ asset('muzarjs/muzar_item_edit.js') }}" type="text/javascript"></script>
    {% else %}
        <script src="{{ asset('muzarjs/build/common.js') }}" type="text/javascript"></script>
        <script src="{{ asset('muzarjs/build/muzar_item_edit.js') }}" type="text/javascript"></script>
    {% endif %}

{% endblock %}



